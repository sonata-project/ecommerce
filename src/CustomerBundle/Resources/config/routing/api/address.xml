<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="get_addresses" path="/addresses.{_format}" methods="GET" controller="Sonata\CustomerBundle\Controller\Api\AddressController::getAddressesAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="get_address" path="/addresses/{id}.{_format}" methods="GET" controller="Sonata\CustomerBundle\Controller\Api\AddressController::getAddressAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="post_address" path="/addresses.{_format}" methods="POST" controller="Sonata\CustomerBundle\Controller\Api\AddressController::postAddressAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="put_address" path="/addresses/{id}.{_format}" methods="PUT" controller="Sonata\CustomerBundle\Controller\Api\AddressController::putAddressAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
    <route id="delete_address" path="/addresses/{id}.{_format}" methods="DELETE" controller="Sonata\CustomerBundle\Controller\Api\AddressController::deleteAddressAction" format="json">
        <requirement key="_format">json|xml|html</requirement>
    </route>
</routes>
