{% block breadcrumb %}
    <div class="row-fluid clearfix">
        {{ sonata_block_render_event('breadcrumb', { 'context': 'catalog', 'category': category }) }}
    </div>
{% endblock %}

<div class="row">

    <div class="span3">

        {% block product_category %}
            <div class="well" style="padding: 8px 0;">
                {{ sonata_block_render({'type': 'sonata.product.block.categories_menu'}, {'current_uri': app.request.requestUri}) }}
            </div>
        {% endblock %}

        {% block product_filter %}{% endblock %}

    </div>

    <div class="span9">

        {% sonata_template_box 'This is the catalog template. Feel free to override it.' %}

        {% if pager.count == 0 %}

            {% block no_products %}
                <div class="no-products-available">
                    {% trans from 'SonataProductBundle' %}no_products_available{% endtrans %}
                </div>
            {% endblock %}

        {% else %}

            <div class="sonata-product-navigation-bar clearfix">
                <div class="pull-left">
                    <h4>
                        {% if category %}
                            {{ category.name }}
                        {% else %}
                            {% trans from 'SonataProductBundle' %}catalog_root_title{% endtrans %}
                        {% endif %}
                    </h4>
                </div>
                <div class="pull-right">
                    {% include 'SonataProductBundle:Catalog:_pager.html.twig' %}
                </div>
            </div>

            {% block products %}{% endblock %}

            <div class="sonata-product-navigation-bar clearfix">
                <div class="pull-right">
                    {% include 'SonataProductBundle:Catalog:_pager.html.twig' %}
                </div>
            </div>

        {% endif %}

    </div>

</div>
