{% extends 'SonataSeoBundle:Block:breadcrumb.html.twig' %}

{% block block %}
{% spaceless %}

    <ul class="breadcrumb">

        <li>{% block homepage_breadcrumb %}<a href="/"><i class="icon-home"></i></a>{% endblock %} <span class="divider">&raquo;</span></li>
        <li><a href="{{ path('sonata_catalog_index') }}">{% trans from 'SonataProductBundle' %}catalog_root_title{% endtrans %}</a> <span class="divider">&raquo;</span></li>

        {% if categories %}
            {% for category in categories %}
                <li>
                    <a href="{{ url('sonata_catalog_category', {'category_id': category.id, 'category_slug': category.slug}) }}">{{ category.name }}</a>
                    {% if not loop.last or product %}<span class="divider">&raquo;</span>{% endif %}
                </li>
            {% endfor %}
        {% endif %}

        {% if product %}
            <li>{{ product.name }}</li>
        {% endif %}

    </ul>

{% endspaceless %}
{% endblock %}



