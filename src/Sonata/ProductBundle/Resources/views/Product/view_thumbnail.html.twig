<div class="thumbnail" itemscope itemtype="http://schema.org/Product">
    <a href="{{ url('sonata_product_view', {'productId': product.id, 'slug': product.slug}) }}">
        {% if product.image %}
            {% thumbnail product.image, 'small' with {'itemprop': 'image', 'width': '100%'} %}
        {% endif %}

        <h4 itemprop="name">{{ product.name }}</h4>
        <p itemprop="price">
            {% if sonata_product_has_enabled_variations(product) %}
                {{ sonata_product_cheapest_variation_price(product)|number_format_currency(currency) }}
            {% else %}
                {{ product.price|number_format_currency(currency) }}
            {% endif %}
        </p>
    </a>
</div>
