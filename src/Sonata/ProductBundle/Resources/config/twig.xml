<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.product.twig.extension.class">Sonata\ProductBundle\Twig\Extension\ProductExtension</parameter>
    </parameters>

    <services>
        <service id="sonata.product.twig.extension" class="%sonata.product.twig.extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="sonata.product.pool" />
            <argument type="service" id="router"/>
            <argument type="service" id="sonata.intl.templating.helper.datetime"/>
        </service>
    </services>
</container>
